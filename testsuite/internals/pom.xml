<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.jboss.as</groupId>
        <artifactId>jboss-as-testsuite</artifactId>
        <version>7.1.0.Alpha1-SNAPSHOT</version>
    </parent>

    <artifactId>jboss-as-testsuite-integration-internals</artifactId>
    <name>JBoss Application Server: Test Suite: AS7 Internals Integration Tests</name>

    <dependencies>
    
      <!-- AS7 Full Dependency Chain -->
      <dependency>
        <groupId>org.jboss.as</groupId>
        <artifactId>jboss-as-build</artifactId>
        <type>pom</type>
        <version>${project.version}</version>
      </dependency>  
      
      <!-- Common tests we may inherit from the api suite -->
      <dependency>
        <groupId>org.jboss.as</groupId>
        <artifactId>jboss-as-testsuite-integration-api</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>org.jboss.as</groupId>
        <artifactId>jboss-as-testsuite-integration-api</artifactId>
        <version>${project.version}</version>
        <type>test-jar</type>
      </dependency>
      
      <!-- Arquillian Container -->
      <dependency>
        <groupId>org.jboss.as</groupId>
        <artifactId>jboss-as-arquillian-container-managed</artifactId>
        <scope>test</scope>
      </dependency>
      
    </dependencies>
    
    <!-- We only configure this here to not run some tests -->
    <!-- TODO: This was ported over from the legacy testsuite and should be REMOVED -->
    <build>
      <plugins>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-surefire-plugin</artifactId>
          <configuration>
            <includes>
              <include>**/*TestCase.java</include>
            </includes>
            <excludes>
              <exclude>org/jboss/as/test/internals/xerces/ws/**/*TestCase.java</exclude>
            </excludes>
            <executions>
              <execution>
                <id>preview</id>
                <phase>test</phase>
                <goals>
                  <goal>test</goal>
                </goals>
                <configuration>
                  <redirectTestOutputToFile>true</redirectTestOutputToFile>
                  <enableAssertions>true</enableAssertions>
                  <systemPropertyVariables>
                    <jboss.server.config.file.name>standalone-preview.xml</jboss.server.config.file.name>
                  </systemPropertyVariables>
                  <includes>
                    <include>org/jboss/as/test/internals/xerces/ws/**/*TestCase.java</include>
                  </includes>
                  <excludes>
                    <exclude>none</exclude>
                  </excludes>
                </configuration>
              </execution>
            </executions>
          </configuration>
        </plugin>
      </plugins>
    </build>

</project>
