<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.jboss.as</groupId>
        <artifactId>jboss-as-testsuite</artifactId>
        <version>7.1.0.Alpha1-SNAPSHOT</version>
    </parent>

    <artifactId>jboss-as-testsuite-integration-spec</artifactId>
    <name>JBoss Application Server: Test Suite: Specification Tests</name>
    
    <!-- We only configure this here to not run some tests -->
    <!-- TODO: This was ported over from the legacy testsuite and should be REMOVED -->
    <build>
      <plugins>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-surefire-plugin</artifactId>
          <configuration>
            <includes>
              <include>**/*TestCase.java</include>
            </includes>
            <excludes>
              <!-- Known failures, to be removed -->
              <exclude>org/jboss/as/test/spec/osgi/jndi/JNDITestCase.java</exclude>
              <!-- WebService tests are excluded since the default/web profile doesn't support webservices -->
              <exclude>org/jboss/as/test/spec/ejb3/mdb/**/*TestCase.java</exclude>
              <exclude>org/jboss/as/test/spec/ws/**/*TestCase.java</exclude>
              <exclude>org/jboss/as/test/spec/wsejb/**/*TestCase.java</exclude>
            </excludes>
            <executions>
              <execution>
                <id>preview</id>
                <phase>test</phase>
                <goals>
                  <goal>test</goal>
                </goals>
                <configuration>
                  <redirectTestOutputToFile>true</redirectTestOutputToFile>
                  <enableAssertions>true</enableAssertions>
                  <systemPropertyVariables>
                    <jboss.server.config.file.name>standalone-preview.xml</jboss.server.config.file.name>
                  </systemPropertyVariables>
                  <includes>
                    <!-- Enable the Webservice testcases since "preview" profile has support for webservices -->
                    <include>org/jboss/as/test/spec/ejb3/mdb/**/*TestCase.java</include>
                    <include>org/jboss/as/test/spec/ws/**/*TestCase.java</include>
                    <include>org/jboss/as/test/spec/wsejb/**/*TestCase.java</include>
                  </includes>
                  <excludes>
                    <exclude>none</exclude>
                  </excludes>
                </configuration>
              </execution>
            </executions>
          </configuration>
        </plugin>
  
        <plugin>
         <groupId>org.apache.maven.plugins</groupId>
         <artifactId>maven-jar-plugin</artifactId>
         <version>2.2</version>
         <executions>
           <execution>
             <goals>
               <goal>test-jar</goal>
             </goals>
           </execution>
         </executions>
       </plugin>
  
      </plugins>
    </build>

    <!--
    ONLY the Java EE Spec APIs are to be allowed in compile scope here
    (inherited from parent)
     -->
    <dependencies>
      <dependency>
        <groupId>org.jboss.spec.javax.servlet</groupId>
        <artifactId>jboss-servlet-api_3.0_spec</artifactId>
      </dependency>
      <dependency>
        <groupId>org.jboss.as</groupId>
        <artifactId>jboss-as-demos-spec</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>org.jboss.as</groupId>
        <artifactId>jboss-as-arquillian-container-managed</artifactId>
        <scope>test</scope>
      </dependency>
    </dependencies>

</project>
